<Window x:Class="F1Predictor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="F1 Predictor Alpha" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="F1 Race Predictor" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Оберіть гонщика:"/>
            <ComboBox x:Name="DriverCombo" Height="30" Margin="0,0,0,10" 
                      DisplayMemberPath="FullName" 
                      SelectedValuePath="DriverId"
                      IsEditable="True" 
                      IsTextSearchEnabled="True"/>

            <Label Content="Оберіть команду:"/>
            <ComboBox x:Name="TeamCombo" Height="30" Margin="0,0,0,10" 
                      DisplayMemberPath="Name" 
                      SelectedValuePath="ConstructorId"
                      IsEditable="True" 
                      IsTextSearchEnabled="True"
                      SelectionChanged="TeamCombo_SelectionChanged"/> 
            <Image x:Name="TeamLogo" Height="100" Margin="0,0,0,20" 
                   Stretch="Uniform"/>
            <Label Content="Оберіть трасу:"/>
            <ComboBox x:Name="CircuitCombo" Height="30" Margin="0,0,0,10"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="CircuitId"
                      IsEditable="True" IsTextSearchEnabled="True"/>

            <Label Content="Стартова позиція (1-20):"/>
            <Slider x:Name="GridSlider" Minimum="1" Maximum="20" Value="1" 
                    TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding ElementName=GridSlider, Path=Value}" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Передбачити результат" Height="40" Click="ButtonPredict_Click"/>

            <Border Background="#E8F5E9" CornerRadius="10" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Прогнозований результат:" HorizontalAlignment="Center" Foreground="Gray"/>
                    <TextBlock x:Name="ResultText" Text="---" 
                               FontSize="28" FontWeight="Bold" 
                               HorizontalAlignment="Center" Foreground="#2E7D32"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>